{
  "name": "rails-react-graphql-cli",
  "version": "1.0.0",
  "description": "CLI tool to generate boilerplate Rails React GraphQL projects",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "rails-react-graphql": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "prepublishOnly": "pnpm run build",
    "postinstall": "pnpm run build",
    "global:install": "pnpm install -g .",
    "global:uninstall": "pnpm remove -g rails-react-graphql-cli",
    "global:update": "pnpm update -g rails-react-graphql-cli"
  },
  "keywords": [
    "cli",
    "rails",
    "react",
    "graphql",
    "boilerplate",
    "generator",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/mustache": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
